{
  "name": "Series Guide Chrome!",
   "manifest_version": 2,
   "version" : "0.5",
  "description": "Manage your favorite series and download them from The Pirate Bay!",
  "browser_action": {
  	"default_title": "TPB Series Guide for Chrome",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "tpblogo.png",
    "48": "tpblogo.png",
    "128": "tpblogo.png"
  },
  "permissions" : [
    "https://*/*",
    "http://*/*",
    "notifications"
  ],
  "options_page": "options.html",
  "update_url": "https://github.com/SchizoDuckie/seriesguide-chrome/raw/master/updates.xml"
}